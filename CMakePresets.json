{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "ENABLE_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "gcc-RelWithDebInfo",
      "inherits": "base",
      "description": "GCC with RelWithDebInfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      }
    },
    {
      "name": "gcc-Sanitize",
      "inherits": "base",
      "description": "GCC with ASan/UBSan (custom Sanitize build type)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      }
    },
    {
      "name": "clang-RelWithDebInfo",
      "inherits": "base",
      "description": "Clang with RelWithDebInfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    },
    {
      "name": "clang-Sanitize",
      "inherits": "base",
      "description": "Clang with ASan/UBSan (custom Sanitize build type)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gcc-RelWithDebInfo",
      "configurePreset": "gcc-RelWithDebInfo"
    },
    {
      "name": "gcc-Sanitize",
      "configurePreset": "gcc-Sanitize"
    },
    {
      "name": "clang-RelWithDebInfo",
      "configurePreset": "clang-RelWithDebInfo"
    },
    {
      "name": "clang-Sanitize",
      "configurePreset": "clang-Sanitize"
    }
  ],
  "testPresets": [
    {
      "name": "gcc-RelWithDebInfo",
      "configurePreset": "gcc-RelWithDebInfo"
    },
    {
      "name": "gcc-Sanitize",
      "configurePreset": "gcc-Sanitize"
    },
    {
      "name": "clang-RelWithDebInfo",
      "configurePreset": "clang-RelWithDebInfo"
    },
    {
      "name": "clang-Sanitize",
      "configurePreset": "clang-Sanitize"
    }
  ]
}